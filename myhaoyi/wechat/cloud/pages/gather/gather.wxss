/* pages/gather/gather.wxss */
Page {
  background-color: #eee;
}
.feed-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  background: #eee;
}
.feed-bind {
  margin-top: 20rpx;
}
.weui-cell_active {
  background-color: #dedede;
}
.feed-scan {
  color: dodgerblue;
}
.fa-lg {
  font-size: 1.5em;
  top: 4rpx;
}
.feed-item {
  margin-bottom: 20rpx;
}
.weui-form-preview__value {
  text-overflow: ellipsis;
  white-space: nowrap;
}
.weui-form-preview__label {
  color: #333;
}
.weui-form-preview__bd {
  color: #666;
}
.feed-steps-title {
  width: 100%;
  color: #222;
  font-size: 32rpx;
  margin-top: 20rpx;
  line-height: 80rpx;
  text-align: center;
  background-color: #fff;
  border-top: 1rpx solid #e0e0e0;
  border-bottom: 1rpx solid #e0e0e0;
}
.feed-steps-container {
  width: 100%;
  background-color: #fff;
  border-bottom: 1rpx solid #e0e0e0;
}
.feed-steps-content {
  margin: 0 10rpx 10rpx 40rpx;
  padding-top: 10rpx;
}
.feed-unbind {
  color: red;
}
.feed-unbind-active {
  background-color: #dedede;
}