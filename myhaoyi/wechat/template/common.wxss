.feed-more {
  margin: 20rpx auto;
  line-height: 1.6em;
  font-size: 28rpx;
  text-align: center;
}
.feed-none {
  color: #666;
  display:inline-block;
  vertical-align:middle;
}
.zan-toast {
  position: fixed;
  top: 15%;
  left: 20%;
  /*transform: translateZ(0) translateY(-100%);*/
  background: rgba(0,0,0,.7);
  color: #fff;
  font-size: 16px;
  width: 60%;
  line-height: 2.0em;
  margin: 0 auto;
  box-sizing: border-box;
  padding: 10px;
  text-align: center;
  border-radius:4px;
  z-index:100;
}